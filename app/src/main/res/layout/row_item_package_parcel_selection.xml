<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_app_theam_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/underbar_card"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_thickness"
        android:layout_marginTop="4dp"
        android:background="#6f308f"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_parcel_description" />

    <TextView
        android:id="@+id/parcel_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/avenirfile"
        android:text="Amount Pkr : "
        android:textColor="#231f20"
        app:layout_constraintStart_toEndOf="@+id/cb_parcel_selected"
        app:layout_constraintTop_toBottomOf="@+id/tx_parcel_id" />

    <TextView
        android:id="@+id/tx_parcel_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/avenirfile"
        android:text="this is a test parcel and needs to be deliveryed at test location it contains test items and has some test price attacked to it"
        android:textColor="#231f20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cb_parcel_selected"
        app:layout_constraintTop_toBottomOf="@+id/parcel_id2" />

    <TextView
        android:id="@+id/tx_parcel_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/avenirfile"
        android:text="11382"
        android:textColor="#231f20"
        app:layout_constraintBottom_toBottomOf="@+id/parcel_date"
        app:layout_constraintStart_toEndOf="@+id/parcel_date"
        app:layout_constraintTop_toTopOf="@+id/parcel_date" />

    <TextView
        android:id="@+id/tx_parcel_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/avenirfile"
        android:text="18763218"
        android:textColor="#231f20"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cb_parcel_selected"
        app:layout_constraintTop_toTopOf="@+id/cb_parcel_selected" />

    <TextView
        android:id="@+id/parcel_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenirfile"
        android:text="Parcel Description"
        android:textColor="#231f20"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cb_parcel_selected"
        app:layout_constraintTop_toBottomOf="@+id/parcel_date" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_parcel_selected"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:buttonTint="#703090"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>